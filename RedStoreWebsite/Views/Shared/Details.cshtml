@model ShopConnection.tbPRODUCT

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<!------------------------------ Single product details------------------------------>
<div class="small-container single-product">
    <!--<h2 class="title" >Featured Products</h2>-->
    <div class="row">
        <div class="col-2">
            <img src="~/images/products/@Model.Hinh1" width="100%" id="productImg">

            <div class="small-img-row">
                <div class="small-img-col">
                    <img src="~/images/products/@Model.Hinh2" width="100%" class="small-img">
                </div>
                <div class="small-img-col">
                    <img src="~/images/products/@Model.Hinh3" width="100%" class="small-img">
                </div>
                <div class="small-img-col">
                    <img src="~/images/products/@Model.Hinh4" width="100%" class="small-img">
                </div>
                <div class="small-img-col">
                    <img src="~/images/products/@Model.Hinh5" width="100%" class="small-img">
                </div>
            </div>
        </div>

        <div class="col-2">
            <p>Home / Shoes</p>
            <h1>@Model.TenSP</h1>
            <h4>@Model.Dongia VNĐ</h4>

            @if (User.Identity.IsAuthenticated)
            {
                using (Html.BeginForm("Them", "Cart", FormMethod.Post))
                {
                    <input type="hidden" name="MaSP" value="@Model.MaSP"/>
                    <input type="hiden" name="Dongia" value="@Model.Dongia"/>
                    <input type="hidden" name="TenSP" value="@Model.TenSP"/>
                    <select>
                        <option>Select Size</option>
                        <option>36</option>
                        <option>37</option>
                        <option>38</option>
                        <option>39</option>
                        <option>40</option>
                        <option>41</option>
                        <option>42</option>
                        <option>43</option>
                        <option>44</option>
                    </select>
                    <input type="number" values="1" min="1" max="1000" name="Soluong">
                    <input type="submit" class="btn" value="Add to Cart"/>
                }
            } else
            {
                <h2>Vui lòng đăng nhập để mua sản phẩm</h2>
            }
            <br>
            <h3>Product Details<i class="fa fa-indent"></i></h3>
            <br>
            <p>@Model.Mota</p>
        </div>
    </div>
</div>





